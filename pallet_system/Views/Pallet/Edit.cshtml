@model EditPalletViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>
<hr />
<div class="row">
    <div class="col-md-12">
        <form method="post" asp-action="Edit">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input asp-for="ID" class="form-control" hidden />
            <div class="form-group">
                <label asp-for="NAME" class="control-label"></label>
                <input asp-for="NAME" class="form-control" />
                <span asp-validation-for="NAME" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IP" class="control-label"></label>
                <input asp-for="IP" class="form-control" />
                <span asp-validation-for="IP" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="STATUS_NAME" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <select asp-for="STATUS_NAME" class="custom-select mr-sm-2"
                            asp-items="@new SelectList(Model.STATUSES_INFO.Select(x => x.NAME))">
                        <option value="">Please Select</option>
                    </select>
                    <span asp-validation-for="STATUS_NAME"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="List">Back to List</a>
</div>
